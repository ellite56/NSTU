<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.rgz.SceneController">
    <Text text="Лента новостей" fontSmoothingType="GRAY" style="-fx-font-size: 24px">
        <font>
            <Font size="14.0" />
        </font>
    </Text>
    <Button fx:id="loginAsAdminButton" text="Войти как администратор"
            prefWidth="250.0"
            prefHeight="30.0"
    />
    <Button fx:id="loginButton" text="Войти как пользователь"
            prefWidth="250.0"
            prefHeight="30.0"
    />
    <Button fx:id="loginAsGuestButton" text="Войти как гость"
            prefWidth="250.0"
            prefHeight="30.0"
    />
    <Button fx:id="registerButton" text="Регистрация"
            prefWidth="250.0"
            prefHeight="30.0"
    />
    <VBox.margin>
        <Insets top="20.0" />
    </VBox.margin>
</VBox>