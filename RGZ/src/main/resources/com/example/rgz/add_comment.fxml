<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.rgz.AddCommentController"
      alignment="CENTER" spacing="10" prefWidth="400" prefHeight="300">

    <Label text="Добавить комментарий" style="-fx-font-size: 18px;" />
    <TextArea fx:id="commentField" promptText="Введите комментарий..." maxWidth="300" prefHeight="200" />
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="saveButton" text="Сохранить" />
        <Button fx:id="cancelButton" text="Отмена" />
    </HBox>
</VBox>
